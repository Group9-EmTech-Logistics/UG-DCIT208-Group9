# ===========================
# Stage 1: Build Application
# ===========================
FROM maven:3.9.6-eclipse-temurin-17 AS build

WORKDIR /app

# Copy pom.xml and download dependencies first (for caching)
COPY pom.xml .
RUN mvn dependency:go-offline -B

# Copy source code
COPY src ./src

# Build the application (skip tests for speed)
RUN mvn clean package -DskipTests


# ===========================
# Stage 2: Runtime Container
# ===========================
FROM eclipse-temurin:17-jre-jammy

WORKDIR /app

# Create non-root user (security best practice)
RUN groupadd -r emtech && useradd -r -g emtech emtech

# Copy built JAR from build stage
COPY --from=build /app/target/logistics-1.0.0.jar app.jar

# Create logs directory and assign permissions
RUN mkdir -p /app/logs && chown -R emtech:emtech /app

# Switch to non-root user
USER Emtechadmin

# Expose Spring Boot port
EXPOSE 8080

# Add environment variable for profile switching
ENV SPRING_PROFILES_ACTIVE=docker

# Health check (requires Spring Boot actuator endpoint enabled)
HEALTHCHECK --interval=30s --timeout=5s --start-period=60s --retries=3 \
  CMD curl -f http://localhost:8080/actuator/health || exit 1

# Run the application with active profile
ENTRYPOINT ["java", "-jar", "app.jar", "--spring.profiles.active=${SPRING_PROFILES_ACTIVE}"]
